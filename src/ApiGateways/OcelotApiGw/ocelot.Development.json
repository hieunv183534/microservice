        ],
        "DownstreamPathTemplate": "/api/inventory/purchase/{any}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 5006
          }
        ]
      }
    ]
}